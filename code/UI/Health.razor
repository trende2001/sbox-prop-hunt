@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct; 
@using System;
@namespace MyGame
@inherits Panel

<style>
	.health {
		position:absolute;
		bottom:32px;
		left:32px;
		gap:16px;
	} 
	.seg {
		font-size: 85px;
		background-color: transparent;
		color: white;
		font-weight: 600;
		//text-stroke: 3px black;
		font-family: Nexa-Heavy;
	}
</style>

<root class="health">  
	@if (Game.LocalPawn.LifeState == LifeState.Alive)
	{
		<div class="seg">
			<img src="ui/icon/health-icon.png" style="width: 60px; height: 60px; margin: 33px"/>
			@Math.Round(Game.LocalPawn.Health)
		</div>
	}
</root> 

@code {
	protected override int BuildHash()
	{ 
		return HashCode.Combine(Math.Round(Game.LocalPawn.Health), Game.LocalPawn.LifeState);
	}
}