@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct; 
@using System;
@using System.Collections.Generic;
@using System.Linq;


<style>
	.popup {
		top: 32px;
		left: 32px;
		
		background-color: rgba(26, 26, 26, 0.72);
		backdrop-filter: blur(32px);
		font-family: Poppins;
		flex-direction: column;
		
		border-left-width: 6px;
		border-left: yellow;
	}
	
	.title {
		padding: 8px;
		font-size: 18px;
		background-color: rgba(32, 32, 32, 0.7);
		color: white;
	}
	
	.text { 
    	padding: 8px;
    	font-size: 14px;
    	color: white;
    }
</style>

<root class="popup">
	<div class="title">The seekers will be unblinded in 15 seconds</div>
	<div class="text">Hide or die</div>
</root>

@code {
	public string Title;
	public string Text;
	public Color TitleColor;
	public TimeSince TimeSincePanelCreated = 0f;
	
	
}