@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct; 
@using System;
@namespace MyGame

@inherits Panel

<style>
	PropLockAlert {
        position: absolute;
        width: 100%;
        height: 100%;
            
        &.PropLockOn {
            border: 6px solid #e7d466;
        }
    }
</style>

<root>

</root>

@code
{
    public override void Tick()
    {
        if (Game.LocalPawn is not Player player)
            return;
        
        if ( player.Team is not Props )
        {
            Style.Display = DisplayMode.None;
        }
        else
        {
            Style.Display = DisplayMode.Flex;
        }
        
        SetClass("PropLockOn", player.LockRotation && player.TeamName == "Props");
        
        Style.Dirty();
    }
}
