@using Sandbox
@using System

@namespace MyGame

<root class="@(Input.Down("Score") ? "" : "hide")">
	<label class="title">Prop Hunt</label>
	<div class="players">
		@foreach (var client in Game.Clients)
		{
			<ScoreboardRow Client=@client />
		}
	</div>
</root>

@code {
	protected override int BuildHash()
	{
		return HashCode.Combine(Input.Down("Score"));
	}
}

<style>
    Scoreboard {
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        transition: all 100ms ease-out;
        transform: scale(1.05);

        .title {
            font-size: 70px;
            color: white;
            font-family: Poppins;
            text-shadow: 2px 2px 0px black;
        }

        .players {
            background-color: #00000042;
            backdrop-filter-blur: 20px;
            max-width: 905px;
            max-height: 800px;
            flex-wrap: wrap;
        }

        &.hide {
            opacity: 0;
            transform: scale(1);
        }
    }
</style>